{
  "from": "${from}",
  "size": "${size}",
  "track_total_hits": true,
  "query": {
    "bool": {
      "must": [
        <#if act_type??>
        {
          "wildcard": {
            "act_type": {
              "value": "${act_type}",
              "boost": 2
            }
          }
        },
        </#if>
        <#if show??>
        {
          "match": {
            "show": {
              "query": "${show}"
            }
          }
        },
        </#if>
        {
          "range": {
            "end_time": {
              "gte": "${end_time}"
            }
          }
        }
      ]
    }
  },
  "sort": {
    "end_time": {
      "order": "desc"
    }
  }
}