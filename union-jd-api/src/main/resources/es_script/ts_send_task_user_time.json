{
  "from": "${from}",
  "size": "${size}",
  "track_total_hits": true,
  "query": {
    "bool": {
      "must": [
        {
          "match_all": {}
        },
        {
          "match": {
            "task_status": 0
          }
        },
        {
          "match": {
            "send_day": "${send_day}"
          }
        }
      ]
    }
  },
  "sort": {
    "createtime": {
      "order": "asc"
    }
  }
}